/* --------------------------------- @animate --------------------------------- */

@keyframes firstBar {
  0%   { height: 10px; }
  50%  { height: 30px; }
  100% { height: 10px; }
}

@keyframes secondBar {
  0%   { height: 30px; }
  50%  { height: 10px; }
  100% { height: 30px; }
}

@keyframes thirdBar {
  0%   { height: 20px; }
  40%  { height: 10px; }
  60%  { height: 30px; }
  100% { height: 20px; }
}

@keyframes ant-skeleton-loading {
  0% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0 50%;
  }
}

@keyframes waveEffect {
  100% {
    box-shadow: 0 0 0 16px color-primary
  }
}

@keyframes fadeEffect {
  100% {
    opacity: 0
  }
}

bg-image($url, $ext = ".png")
