.before-diver{
  position relative
  &::before {
    content: '';
    position: absolute;
    border: 1px solid #dcdcdc;
    height: 60%;
    top: 20%;
    left: 0;
    transform-origin: 0 0;
  }

  @media (min-resolution: 2dppx){
    &::before{
      transform: scale(0.5);
      height: 120%;
      top: 30%;
    }
  }

  @media (min-resolution: 3dppx){
    &::before{
      height: 180%;
      top: 40%;
      transform: scale(0.3333)  
    }
  }
