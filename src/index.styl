/* --------------------------------- @help --------------------------------- */
// n*8
$n = 10px

button
  &.md-button
    height: 80px
    line-height: normal;
    &.wave
      &::before
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        display: block;
        border-radius: inherit;
        box-shadow: 0 0 0 0 color-primary;
        opacity: 0.2;
        animation-iteration-count: infinite;
        animation: fadeEffect 2s cubic-bezier(0.08, 0.82, 0.17, 1), waveEffect 0.4s cubic-bezier(0.08, 0.82, 0.17, 1);
        animation-fill-mode: forwards;
        content: '';
        pointer-events: none;
    &.waving
      &::before
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        display: block;
        border-radius: inherit;
        box-shadow: 0 0 0 0 color-primary;
        opacity: 0.2;
        animation-iteration-count: infinite;
        animation: fadeEffect 2s cubic-bezier(0.08, 0.82, 0.17, 1), waveEffect 0.4s cubic-bezier(0.08, 0.82, 0.17, 1);
        // animation-fill-mode: forwards;
        content: '';
        pointer-events: none;
        animation-iteration-count: infinite;
    &:not(.small)
      .md-button-inner
        font-size 32px
        line-height: 38px
    &.small
      height: 64px
      .md-button-inner
        font-size 22px
        line-height: 28px
    &.primary
      // background-image: linear-gradient(90deg, #F946F3 0%, #C158FE 100%);
      &::after
        border-color: transparent


